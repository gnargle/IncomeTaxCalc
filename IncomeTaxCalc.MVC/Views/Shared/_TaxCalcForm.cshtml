@using IncomeTaxCalc.MVC.Models
@model TaxCalcFormModel

<h1 class="display-4">Online Income Tax Calculator</h1>
<div class="form-container">
    <form asp-controller="TaxCalc" asp-action="SubmitCalc" method="post">
        <div class="form-input">
            <label asp-for="@Model.RegionId"></label>
            <select asp-for="@Model.RegionId" asp-items="Html.GetEnumSelectList<RegionEnum>()"></select>            
        </div>
        <div class="form-input">
            <label asp-for="@Model.GrossAnnual"></label>
            <input asp-for="@Model.GrossAnnual" type="number"/>            
        </div>
        <div class="form-input">
            <input type="submit" value="Calculate" />
        </div>       
    </form>
</div>
<div>
    <h3 class="text-danger">@Model.Error</h3>
    <span asp-validation-for="@Model.RegionId" class="text-danger"></span>
    <span asp-validation-for="@Model.GrossAnnual" class="text-danger"></span>
</div>